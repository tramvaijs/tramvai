{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noEmitOnError": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "~shared/*": ["src/shared/*"],
      "~entities/*": ["src/entities/*"],
      "~features/*": ["src/features/*"],
      "~widgets/*": ["src/widgets/*"],
      "~pages/*": ["src/pages/*"],
      "~processes/*": ["src/processes/*"],
      "~app/*": ["src/app/*"],
      "~test/*": ["test/*"]
  }
  }{{#if isJest}},
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "allowJs": true,
    }
  }{{/if}}
}
