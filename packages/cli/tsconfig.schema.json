{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2015",
        "module": "commonjs",
        "lib": [
          "es2015",
          "es2016",
          "es2017",
          "es2018",
          "dom"
        ],
        "strict": false,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "types": [
            "../../node_modules/@types/node",
            "../../node_modules/@types/jest",
            "../../node_modules/@types/webpack"
        ],
        "declarationDir": "./lib",
        "outDir": "./lib",
        "rootDir": "./src",
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.bench.ts",
        "**/__tests__/**",
        "**/__integration__/**",
        "**/__fixtures__/**"
    ]
  }
