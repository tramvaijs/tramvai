{
  "$schema": "../../node_modules/@tramvai/cli/schema.json",
  "analytics": {
    "enabled": false
  },
  "projects": {
    "polyfills": {
      "name": "polyfills",
      "polyfill": "src/polyfill.ts",
      "root": "src",
      "type": "application",
      "fileSystemPages": {
        "enabled": true,
        "pagesDir": false
      },
      "splitChunks": {
        "mode": "granularChunks"
      },
      "sourceMap": {
        "development": false,
        "production": false
      }
    }
  }
}
