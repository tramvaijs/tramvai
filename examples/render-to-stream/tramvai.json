{
  "$schema": "../../node_modules/@tramvai/cli/schema.json",
  "projects": {
    "render-to-stream": {
      "name": "render-to-stream",
      "root": "src",
      "type": "application",
      "modern": true,
      "fileSystemPages": {
        "enabled": true,
        "pagesDir": false
      },
      "splitChunks": {
        "mode": "granularChunks"
      },
      "postcss": {
        "config": "src/postcss",
        "cssLocalIdentName": "[name]__[local]_[hash:base64:5]"
      },
      "hotRefresh": {
        "enabled": true
      },
      "sourceMap": {
        "development": false,
        "production": true
      },
      "experiments": {
        "transpilation": {
          "loader": "swc"
        }
      }
    }
  }
}
