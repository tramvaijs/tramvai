{
  "$schema": "../../node_modules/@tramvai/cli/schema.json",
  "projects": {
    "pwa": {
      "name": "pwa",
      "root": "src",
      "type": "application",
      "modern": true,
      "fileSystemPages": {
        "enabled": true,
        "pagesDir": false
      },
      "splitChunks": {
        "mode": "granularChunks"
      },
      "postcss": {
        "config": "src/postcss",
        "cssLocalIdentName": {}
      },
      "hotRefresh": {
        "enabled": false
      },
      "sourceMap": {
        "development": false,
        "production": true
      },
      "experiments": {
        "transpilation": {
          "loader": {
            "development": "swc"
          }
        },
        "pwa": {
          "sw": {
            "src": "service-worker.ts",
            "dest": "service-worker.js",
            "scope": "/scope/"
          },
          "workbox": {
            "enabled": {
              "production": true,
              "development": true
            },
            "include": [
              "platform\\.([\\w\\d]+?\\.)?(js|css)$",
              "react\\.([\\w\\d]+?\\.)?js$",
              "tramvai-workbox-window\\.([\\w\\d]+?\\.)?chunk.js$",
              "manifest\\.([\\w\\d]+?\\.)?webmanifest$"
            ],
            "additionalManifestEntries": [
              "/scope/"
            ]
          },
          "webmanifest": {
            "enabled": true,
            "dest": "/manifest.[hash].webmanifest",
            "name": "my manifest",
            "short_name": "also my manifest but short"
          },
          "icon": {
            "src": "images/pwa-icon.png",
            "dest": "images",
            "sizes": [
              36,
              512
            ]
          },
          "meta": {
            "themeColor": "#ffdd2d",
            "viewport": "width=device-width, initial-scale=1"
          }
        }
      }
    }
  }
}
