{
  "$schema": "../../node_modules/@tramvai/cli/schema.json",
  "projects": {
    "fs-pages": {
      "name": "fs-pages",
      "root": "src",
      "type": "application",
      "modern": true,
      "fileSystemPages": {
        "enabled": true,
        "routesDir": false,
        "componentsPattern": "(Page|Layout)\\.tsx?"
      },
      "splitChunks": {
        "mode": "granularChunks"
      },
      "postcss": {
        "config": "src/postcss",
        "cssLocalIdentName": {}
      },
      "hotRefresh": {
        "enabled": true
      },
      "sourceMap": {
        "development": false,
        "production": true
      },
      "experiments": {
        "transpilation": {
          "loader": {
            "development": "swc",
            "production": "babel"
          }
        }
      }
    }
  }
}
